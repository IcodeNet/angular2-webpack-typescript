{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "server",
        "typings"
    ],
      "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
      },
      "compileOnSave": false,
      "buildOnSave": false,
      "atom": { "rewriteTsconfig": false }

}
